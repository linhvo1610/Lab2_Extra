<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog_update">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Student"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="#F46C6C"
        android:textColor="#FFF"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student:"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_margin="5dp"/>
    <EditText
        android:id="@+id/ed_dialog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ed_bg"
        android:layout_margin="5dp"
        android:hint="Input Student"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MSV:"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_margin="5dp"/>
    <EditText
        android:id="@+id/ed_dialog_msv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ed_bg"
        android:layout_margin="5dp"
        android:hint="Input MSV"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_margin="5dp"/>
    <EditText
        android:id="@+id/ed_dialog_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ed_bg"
        android:layout_margin="5dp"
        android:hint="Input MSV"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type:"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_margin="5dp"/>
    <EditText
        android:id="@+id/ed_dialog_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ed_bg"
        android:layout_margin="5dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:inputType="none"
        android:hint="Input Type"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_dialog_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#63EF68"/>
        <Button
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="#ECECEC"
            android:backgroundTint="#EC001B"
            />
        
    </LinearLayout>
    

</LinearLayout>